{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/test",  // Path to your compiled executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,  // Set to true if you want a separate console window
            "MIMode": "gdb",  // Use "lldb" for macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Change to your debugger path
            "preLaunchTask": "Build All"  // Ensure you have a build task defined in tasks.json
        }
    ]
}